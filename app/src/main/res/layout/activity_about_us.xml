<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.ANUBHAV.INFI_Player.AboutUs">

<TableRow android:layout_weight="5"
    android:gravity="center">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@mipmap/aboutus"
        android:layout_gravity="center_horizontal"

       android:layout_weight="50"
        />

</TableRow>
    <TableRow android:layout_weight="5"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/infitxt"
        android:layout_gravity="center_horizontal"

        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="30dp" />
    </TableRow>
    <TableRow android:layout_weight="5"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 2.0"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"

        />

    </TableRow>
    <TableRow android:layout_weight="15"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contact Us"
        android:id="@+id/textView3"
        android:layout_gravity="center"
         />
    </TableRow>
    <TableRow android:layout_weight="5"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/name"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"

        android:layout_below="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />



    </TableRow>
    <TableRow android:layout_weight="5"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mail_anubhav"
        android:id="@+id/textView7"
        android:layout_gravity="center"

        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />


    </TableRow>
    <TableRow android:layout_weight="5"
        android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="+91-7404541565"
        android:id="@+id/textView8"
        android:layout_gravity="center"

        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView4" />
    </TableRow>
    <TableRow android:layout_weight="5"
        android:gravity="center"
        android:paddingBottom="10dp">
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
android:layout_gravity="left"
                android:id="@+id/buttonmail"
                android:background="@mipmap/email_launch"
                android:onClick="email"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/facebook"
                android:id="@+id/button2"
                android:onClick="facebook"
                android:layout_gravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
    </TableRow>
      </TableLayout>
